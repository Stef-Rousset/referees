<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: false,
                autofocus: true,
                label: "Prénom",
                input_html: { autocomplete: "prénom" }%>
    <%= f.input :last_name,
                required: false,
                autofocus: true,
                label: "Nom",
                input_html: { autocomplete: "nom" }%>
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                label: "Nouveau mot de passe",
                hint: "Laisser en blanc si pas de modifications",
                required: false,
                input_html: { autocomplete: "nouveau mot de passe" } %>
    <%= f.input :password_confirmation,
                label: "Confirmation de mot de passe",
                required: false,
                input_html: { autocomplete: "confirmer le nouveau mot de passe" } %>
    <%= f.input :current_password,
                label: "Mot de passe actuel",
                hint: "Mot de passe actuel nécéssaire pour valider les modifications",
                required: true,
                input_html: { autocomplete: "mot de passe actuel" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
