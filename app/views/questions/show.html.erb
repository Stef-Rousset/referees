<div class="show-question-container">
  <h3>Question de niveau <%= @question.level %>, catégorie <%= @question.category %></h3>
  <h4><%= @question.statement %> :</h4>
    <ul class="question-content">
      <li><%= @question.prop_one %></li>
      <li><%= @question.prop_two %></li>
      <li><%= @question.prop_three %></li>
    </ul>
  <h4 class="question-answer-content">La bonne réponse est la réponse <%= @question.answer.good_prop %>.</h4>
  <p><%= @question.answer.explanation %>.</p>
  <div class="show_question-bottom-links">
    <%= link_to "Modifier",  edit_question_path(@question), class: "btn-blue" %>
    <%= link_to "Supprimer", question_path(@question), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-blue" %>
  </div>
</div>

